<%- include('../header.ejs') %>
<div class="container m-4">
    <div class="card">
        <div class="card-header">
            <label class="badge badge-info">Users</label>
            <button data-toggle="modal" data-target="#addModal" class=" btn btn-xs btn-info pull-right">Add New</button>

        </div>
        <div class="card-body">
            <% if(session.success) { %>
              <div class="form-group">
         
        
                  <div class="alert alert-success">
                    Added Successfully
                    
                  </div>
              
                </div>
                <% session.success = null } %>
            <table class="table table-bordered">
                <thead>
                  
                    <th>Name</th>
                    <th>Age</th>
                    <th></th>
                </thead>
                <tbody>
                    <% users.forEach((user) => { %>
                    <tr>
                       
                        <td><%= user.login %></td>
                        <td><%= user.age %></td>
                        <td><a href="/find/<%= user._id %>"><button class="btn btn-sm btn-primary">Show</button>
                        </a></td>
                    </tr>
                    <% }) %>

                </tbody>

            </table>

        </div>
    </div>
</div>
<div class="modal" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
            <form  method="post" action="/user">
        <div class="modal-header">
          <h5 class="modal-title">add User</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
       
                        <div class="form-group">
                          <label for="email">Login:</label>
                          <input name="login" type="text" class="form-control" id="email">
                        </div>
                        <div class="form-group">
                          <label for="pwd">Password:</label>
                          <input name="password" type="password" class="form-control" id="pwd">
                        </div>
                        <div class="form-group">
                          <label for="pwd">Age:</label>
                          <input name="age" type="text" class="form-control" id="pwd">
                        </div>
                     
                        <% if(session.errors) { %>
                            <div class="form-group">
                            <% session.errors.forEach((err) => { %>
                      
                                <div class="alert alert-danger">
                                  <%= err.message %>
                                </div>
                                <% }) %>
                              </div>
                              <% session.errors = null } %>
                  
                     
          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </form>
      </div>
    </div>
  </div>
  
<%- include('../footer.ejs') %>
