<%- include('../header.ejs') %>
<div class="container m-4">
    <div class="card">
        <div class="card-header">
            <label class="badge badge-info">Users</label>
            <button data-toggle="modal" data-target="#addModal" class=" btn btn-xs btn-info pull-right">Add New</button>

        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                  
                    <th>Name</th>
                    <th>Age</th>
                    <th></th>
                </thead>
                <tbody>
                    <% users.forEach((user) => { %>
                    <tr>
                       
                        <td><%= user.name %></td>
                        <td><%= user.age %></td>
                        <td><a href="/find/<%= user._id %>"><button class="btn btn-sm btn-primary">Show</button>
                        </a></td>
                    </tr>
                    <% }) %>

                </tbody>

            </table>

        </div>
    </div>
</div>
<div class="modal" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  
<%- include('../footer.ejs') %>
